<div id ="all">

<nav class="navbar-nav  navbar-light " style="background-color: #e3f2fd;">



<h1 ALIGN=CENTER class = "font-weight-bold btn btn-lg btn-success">Score: <%= "#{@game.score}" %></h1><br>



<%= image_tag(image_url(@question.location), size: "512x320", :class => "rounded mx-auto d-block")%><br><br>



<h3 ALIGN=CENTER >Choose Answer:</h>



<% @ans.each do |x| %>
<%= form_tag answer_path, :class => 'btn btn-outline-dark btn-lg btn-block' do  %>
 <%= hidden_field_tag :id, @game.id %>
 <%= hidden_field_tag :question_id, @question.id %>
 <%= hidden_field_tag :result_id, @game_result.id %>
  <%= hidden_field_tag :chosen, x %>
 <%= submit_tag "#{x}"  %>
<% end %>
<% end %>





