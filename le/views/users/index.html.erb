<div class="container">

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
   <a href="/users/<%=@user.id%>">Back to <%=@user.name%> Page</a>
 </div>
 <div class="container">
    <a href="/users/<%=@user.id%>/my_games">My Games</a>
 </div>
<div class="container">
   <a href="/users/about">About</a>
</div>
 </nav>

<br>
<ul class="list-group">
  <li class="list-group-item active">Top 3 Scores</li>
<% @games.order(score: :desc).first(3). each do |g| %>
<li class="list-group-item"> <%= g.score  %> - <%= g.user.name  %></li>
<% end %>
</ul>
<br>
<ul class="list-group">
    <li class="list-group-item active">Top 5 Correct Questions</li>
<% @top_5_questions.each do |k,v| %>
<li class="list-group-item"> <%= k%> - <%= v%> </li>
<% end %>
</ul>
<br>
<ul class="list-group">
    <li class="list-group-item active">Top 5 Incorrect Questions</li>
<% @bottom_5_questions.each do |k,v| %>
<li class="list-group-item"> <%= k%> - <%= v%> </li>
<% end %>
</ul>
